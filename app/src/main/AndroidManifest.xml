<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clothify"
        tools:targetApi="31" >
        <activity
            android:name=".ui.AcercaActivity"
            android:exported="false" />

        <meta-data
            android:name="firebase_performance_logcat_enable"
            android:value="true" />

        <activity
            android:name=".ui.BottomNavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".ui.recovery.RecoveryActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.clothify.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>